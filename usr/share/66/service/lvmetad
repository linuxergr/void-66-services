[main]
@type= classic
@version = 0.0.1
@description= "lvm2 metadata daemon"
@user= ( root )
@options= ( log env )

[start]
@execute=( execl-cmdline -s { lvmetad -f -p ${pid_path}/${pid_name} -s ${socket_path}/${socket_name} } )

[environment]
pid_path=!/run/lvm
pid_name=!lvmetad.pid
socket_path=!/run/lvm
socket_name=!lvmetad.socket
