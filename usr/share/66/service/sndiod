[main]
@type = classic
@description = "sndio daemon"
@version = 0.0.2
@user = ( root )

[start]
@execute = ( execl-cmdline -s { sndiod ${cmd_args} -d } )

[environment]
# Value is the default as a placeholder - parser cannot use empty values.
# For more options/switches please see sndiod(8).
cmd_args=!-a off
